separator_block_width=12
markup=none

[start_mixxx]
full_text=MIXXX
color=#FFFF00
command=~/.config/i3blocks/scripts/start_mixxx | echo MIXXX

[reset_mixxx_cfg]
full_text=RESET CONFIG
color=#FFA500
command=~/.config/i3blocks/scripts/reset_mixxx_cfg | echo RESET CONFIG

[cpu-label]
full_text=CPU:
color=#FFFFFF
separator=false

[cpu_usage]
command=~/.config/i3blocks/scripts/cpu_usage
color=#888888
interval=10

[memory-label]
full_text=RAM:
separator=false

[memory]
command=~/.config/i3blocks/scripts/memory
color=#888888
interval=30

[disk-label]
full_text=DISK:
color=#FFFFFF
separator=false

[disk]
command=~/.config/i3blocks/scripts/disk
color=#888888
interval=30

[iface-label]
full_text=IP:
color=#FFFFFF
separator=false

[iface]
command=~/.config/i3blocks/scripts/iface
color=#00FF00
interval=10

[time]
command=date '+%d/%m/%y %I:%M%p'
interval=5

[refresh]
full_text=
color=#222222
command=i3-msg restart

[shutdown]
full_text=
color=#880000
command=~/.config/i3blocks/scripts/shutdown | echo '  '
